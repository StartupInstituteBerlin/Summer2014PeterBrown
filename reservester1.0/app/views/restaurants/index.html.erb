<div class="row">
  <h1>
    Restaurants
    <span class="pull-right">
      <%= link_to new_restaurant_path, class: 'btn btn-default' do %>
        <i class="icon-plus-sign"></i> Add a Restaurant
      <%end %>
    </span>
  </h1>
</div>
<div class="container">

  <div>
    <%= link_to "Categories" , categories_path %>: 
    <% @categories.each do |category| %>
      <%= link_to "#{category.name} (#{category.restaurants.count})", category %> 
    <% end %>
  </div>


<ul class="thumbnails">
  <% @restaurants.each do |restaurant| %>
    <li class="span4">
      <%= link_to restaurant do %>
        <%= image_tag restaurant.photo.thumbnail.url if restaurant.photo? %>
        <h3><%= restaurant.name %><h3>
      <% end %>
    </li>
  <% end %>
</ul>