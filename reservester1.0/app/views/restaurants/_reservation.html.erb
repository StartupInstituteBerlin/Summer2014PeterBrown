<%= form_for(@reservation) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <br />

  <%= f.label :date%>
  <%= f.datetime_select :date %>
  <br />

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <%= f.hidden_field :restaurant_id %>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
