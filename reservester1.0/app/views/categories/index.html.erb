<h1>Categories</h1>
<h3><%= link_to "+ Add New Category", new_category_path %></h3>
<div>
	<% @categories.each do |category| %>
		<p><%= link_to category.name, category %></p>
		<% unless category.restaurants.blank? %>
			<ul>
				<% category.restaurants.each do |restaurant| %>
					<li><%= link_to restaurant.name, restaurant %></li>
				<% end %>
			</ul>
		<% end %>
	<% end %>
</div>